<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.ecust.faceaccesscontrol">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.WelcomeActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NoAdminMainActivity"
            android:label="@string/noadminmain_label"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.RegisterNewUserActivity"
            android:label="@string/registernewuser_label"
            android:screenOrientation="landscape" />
        <activity android:name=".common.ExitDialogActivity" />
        <activity android:name=".common.Toolbar2Activity" />
        <activity android:name=".activity.AdminMainActivity"
            android:label="@string/adminmainpage_label"
            android:screenOrientation="landscape" />
    </application>

</manifest>