<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera_recognize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.ecust.faceaccesscontrol.activity.CameraRecognizeActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/java_surface_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <TextView
        android:text="请将脸正对屏幕放置于绿色框中，尺寸需大于500*500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFaceSize" />

</RelativeLayout>
