<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_adminpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/adminmainactivity_toolbar_common"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/keepBrown"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/adminmainactivity_button_noticemanage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="32dp"
                android:background="@color/buttonWhite"
                android:text="@string/adminmainactivity_button_noticemanage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="64dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="64dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/adminmainactivity_button_usermanage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="16dp"
                    android:background="@color/buttonWhite"
                    android:text="@string/adminmainactivity_button_usermanage"/>
                <Button
                    android:id="@+id/adminmainactivity_button_approveregister"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="16dp"
                    android:background="@color/buttonWhite"
                    android:text="@string/adminmainactivity_button_approveregister"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"/>

</android.support.v4.widget.DrawerLayout>
